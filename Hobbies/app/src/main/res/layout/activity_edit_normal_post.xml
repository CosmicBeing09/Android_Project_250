<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_normal_post">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#e1ebf2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"

        >

        <ImageButton
            android:id="@+id/deleteNormalPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:background="#e1ebf2"
            />


        <ImageView
            android:id="@+id/edit_normal_post_Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription=""
            tools:ignore="ContentDescription" />


        <EditText
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_post"
            android:id="@+id/edit_normal_post_text"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Post Text *"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="@android:color/background_dark" />


        <Button
            android:id="@+id/edit_normal_post_submit"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:background="@drawable/rounded_button"
            android:text="Submit"
            android:textColor="@android:color/black"
            android:textStyle="bold" />



        <!-- Link to Login Screen -->


    </LinearLayout>


</LinearLayout>